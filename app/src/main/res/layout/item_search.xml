<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/tv_payment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Payment  made on 12 Dec 18, 12:00PM"/>
        <TextView
            android:id="@+id/tv_task"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_payment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black2"
            android:textSize="12sp"
            android:text="Cleaning Services - Air Conditioning cleaning "/>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:text="12 Dec 18 12:00:00PM"/>
                <TextView
                    android:id="@+id/tv_service_fee"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:textColor="@color/text_black2"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Service Fee: $100.00"/>
                <TextView
                    android:id="@+id/tv_gst_na"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service_fee"
                    android:textColor="@color/text_black2"
                    android:textSize="10sp"
                    android:text="GST: NA"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_gst_na"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/text_black2"
                        android:text="Payment Status: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/text_green"
                        android:text="Paid"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_quotation"
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:background="@drawable/share_bg_green"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="QUOTATION"/>
                <TextView
                    android:id="@+id/tv_log"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:background="@drawable/share_bg_green"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="LOG"/>
                <TextView
                    android:id="@+id/tv_report"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:background="@drawable/share_bg_gray"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="REPORT"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>